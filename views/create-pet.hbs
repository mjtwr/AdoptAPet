<style>
    .form-new-pet{
        margin: 5% 10% ;
        padding: 700px 20px;
        background-color: #6b94f4;
        border-radius: 25px;
    }
    .containerLogIn-create-pet {
  
        margin:  6% 10%;
        display: flex;
        flex-direction: column;
        align-items: center;
        position: relative;
        border-radius: 20px;
        padding: 20px 20px 20px 40px;
        box-sizing: border-box;
        background:linear-gradient(90deg, rgba(209,0,167,1) 0%, rgba(121,217,255,1) 100%);
        box-shadow: 14px 14px 20px #cbced1, -14px -14px 20px white; 
}
    .div-new-pet{
        display: flex;
        align-content: space-between;
    }
    .div-new-pet-fields{
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        border-radius: 25px;
    }
    .field-create-pet{
        margin: 5px 15px;
        width: fit-content;
    }
    .label-create-pet{
        font-weight: bold;
    }
    .h1-create-pet{
        color: #000000;
        text-align: center;
        margin-bottom: 30px;
    }
